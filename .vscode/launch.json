{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "DI test",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/di/test/**/*.ts",
            ],
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "EXCEPTIONS test",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--inspect-brk",
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/exceptions/spine/test"
            ],
            "port": 9229,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "CONFIGURATION test",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/configuration/test/**/*.ts",
            ],
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "LOG test",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/log/test/**/*.ts",
            ],
            "protocol": "inspector",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "REFLECTION tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/reflection/test/**/*.ts",
            ],
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "VALIDATION test",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/validation/test/**/*.ts",
            ],
            "protocol": "inspector",
            "env": {
                "NODE_ENV": "development"
            }
        },
    ]
}